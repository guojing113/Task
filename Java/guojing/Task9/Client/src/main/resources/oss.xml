<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--这里是阿里云ossClient的属性配置-->
    <bean id="ossClient" class="com.aliyun.oss.OSSClient">
        <constructor-arg name="accessKeyId" value="${ossclient.accessKeyId}"/>
        <constructor-arg name="secretAccessKey" value="${ossclient.secretAccessKey}"/>
        <constructor-arg name="endpoint" value="${ossclient.endpoint}"/>
    </bean>

    <bean id="OSSClientUtil" class="com.ptteng.util.API.OSSClientUtil">
        <constructor-arg name="bucketName" value="${OSSClientUtil.bucketName}"/>
        <constructor-arg name="ossClient" ref="ossClient"/>
    </bean>


</beans>